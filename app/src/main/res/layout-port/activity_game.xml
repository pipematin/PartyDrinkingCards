<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/Img_Game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/traffic_1"
        android:scaleType="fitXY"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/LL_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.60"
            android:layout_margin="40dp"
            android:background="@drawable/card_shape"
            android:orientation="vertical">

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorWhite"
                android:background="@color/black"
                android:textStyle="bold|italic"
                android:textSize="20sp"
                android:textAlignment="center"
                android:id="@+id/TV_Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/TV_Type"
                android:textColor="@color/darkRed"
                android:id="@+id/TV_Game_players"
                style="@style/textGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/players"/>

            <TextView
                android:layout_below="@id/TV_Game_players"
                android:textSize="18sp"
                android:padding="10dp"
                android:textAlignment="center"
                android:id="@+id/TV_Players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"/>

            <TextView
                android:layout_below="@id/TV_Players"
                android:textColor="@color/darkRed"
                android:id="@+id/TV_Game_challenge"
                style="@style/textGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/challenge"/>

            <TextView
                android:layout_below="@id/TV_Game_challenge"
                android:textColor="@color/lightBlack"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:padding="10dp"
                android:textAlignment="center"
                android:id="@+id/TV_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_background"
                android:layout_width="115dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/blac_semi"/>

            <ImageView
                android:id="@+id/img_gema"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:maxHeight="10dp"
                android:maxWidth="12dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="10dp"/>


        </RelativeLayout>

        <Button
            android:background="@drawable/button_shape_green"
            android:id="@+id/Btn_nextCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/NextCard"
            android:textStyle="bold|italic"/>

    </LinearLayout>



</RelativeLayout>