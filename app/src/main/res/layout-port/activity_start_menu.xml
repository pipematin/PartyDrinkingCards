<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gradient_green"
    android:id="@+id/RL_StartMenu">


    <ImageView
        android:id="@+id/Img_StartMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/shots"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/Tv_StartMenu"
            android:background="@drawable/gradient_grey"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="50dp"
            android:background="@drawable/button_shape_green"
            android:id="@+id/b_ng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b_ng"/>

        <Button
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape_light_red"
            android:id="@+id/b_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b_options"/>

        <Button
            android:layout_marginTop="25dp"
            android:background="@drawable/extra_extreme"
            android:id="@+id/b_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/free_cards"/>

    </LinearLayout>

    <TextView
        android:id="@+id/numberCards"
        android:textSize="15sp"
        android:layout_height="60dp"
        android:layout_width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/textGameCards"
        android:layout_marginBottom="40dp"
        android:text="@string/totalCards"/>

    <ImageButton
        android:id="@+id/tutorial_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:contentDescription="@string/close"
        android:padding="10dp"
        android:src="@android:drawable/ic_menu_info_details" />


</RelativeLayout>